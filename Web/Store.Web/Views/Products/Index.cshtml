@using  Store.Data.Common.ViewModels
@model List<ProductViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Products</h1>
@if (User.Identity.IsAuthenticated)
{
    <div class="row">
        <div class="col-md-5">
            <a href="#"><div class="btn btn-success">Add</div></a>

        </div>
    </div>
}
<section>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">ProductName</th>
                <th scope="col">Description</th>
                <th scope="col">ProductPrice</th>
            </tr>
        </thead>
        <tbody>
            @{
                int count = 1;
            }
            @foreach (var product in Model)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>@product.ProductName</td>
                    <td>@product.Description</td>
                    <td>@product.ProductPrice</td>
                    <td>
                        <a id="edit" href="#" data-id="@product.Id"><div class="btn btn-info">Edit</div></a>
                        <a id="delete" href="#" data-id="@product.Id"><div class="btn btn-danger">Delete</div></a>
                    </td>
                </tr>

                count++;
            }


        </tbody>
    </table>
</section>
@section Scripts{
    <script>
        $("#edit").click(function () {
            var id = $(this).attr("data-id");
            $.ajax({
                method: "post",
                url: "/products/edit",
                data: { id: id },
                success: function () {
                    alert("ok")
                }
            });
        });
    </script>
}
